@model testt_6.Models.Items
<!DOCTYPE html>
<html>
<!--showMyTasks-->
<head>
    <title>SmartPlan</title>
    <meta charset="utf-8">
    <meta name=”viewport” content=”width =device-width, initial-scale=1″>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <style>
.navbar {
overflow: hidden;
background-color: #1d59ba;
position: fixed;
top: 0;
width: 100%;
border-radius: 0px;
}
.sidenav {
	height: 88%;
  width: 15%;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #f1f1f1;
  overflow-x: hidden;
  padding-top: 20px;
  margin-top: 52px;
}
.sidenav a {
  padding: 6px 8px 6px 16px;
  text-decoration: none;
  font-size: 18px;
  color: #000000;
  display: block;
}

.sidenav a:hover {
  color: #000000;
}

.footer {
position: fixed;
left: 0;
bottom: 0;
width: 100%;
height:4%;
color: white;
text-align: center;
background-color: #1d59ba;
}

@@media only screen and (max-width:800px) {
  /* For tablets: */
  .main {
    width: 80%;
    padding: 0;
  }
  .right {
    width: 100%;
  }
}
@@media only screen and (max-width:500px) {
  /* For mobile phones: */
  .menu, .main, .right {
    width: 100%;
  }
}
/* Use a media query to add a breakpoint at 800px: */
@@media screen and (max-width: 800px) {
  .left, .main, .right {
    width: 100%; /* The width is 100%, when the viewport is 800px or smaller */
  }
}

table, td, th {
  border: 1px solid #ddd;
  text-align: left;
}

table {
margin-left:20%;
color:white;
font-size:20px;
  border-collapse: separate;
  width: 70%;
}

th, td {

  padding: 100px;
}
        td.not_important {
            background-color: #72F75D
        }
        td.important {
            background-color: #E9F76A
        }
        td.very_important {
            background-color: #FF5035
        }
        td.note {
            background-color: #A8DDD8
        }
    </style>
</head>
<body style="background-color:#E1EAE9;">
    <nav class="navbar navbar-expand-sm bg navbar navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#"><font color="#73c2fb">Smart</font><font color="#EE82EE">Plan</font></a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="SecondScreen.html"><font color="#FFFFFF">Начало</font></a></li>
            </ul>
            @using (Html.BeginForm("IndeX", "Items", FormMethod.Post))
            {<form class="navbar-form navbar-right" action="/action_page.php">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" id="search" name="search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            }
        </div>
    </nav>

    <hr>
    <div class="sidenav">
        <a href="@Url.Action("InsertT","Note")">Нова бележка</a>
        <a href="@Url.Action("InsertT","Task")">Нова задача</a>
        <a href="@Url.Action("Note", "Items")" >Покажи моите бележките</a>
        <a href="@Url.Action("Task", "Items")" >Покажи моите задачите </a>
        
        <a href="@Url.Action("Contact","Home")">За контакти</a>
        <a href="@Url.Action("About","Home")">За нас</a>
        <a href="@Url.Action("About","Home")">Помощ</a>
        <a href="@Url.Action("Exit", "User")">Sign Out</a>


    </div>
    @foreach(var el in Model.items)
    {
        Html.Partial("Item", el);
    }


    <script>
        function getCell(x) {
            alert("Cell index is: " + x.cellIndex);
        }
    </script>
    <div class="footer">
        <font color="white"><a href="#">Copyright © SmartPlan. Всички права запазени. </a></font><br />
    </div>
</body>
</html>